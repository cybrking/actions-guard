{
  "_comment": "ActionsGuard Configuration File Example",
  "_usage": "Save as .actionsguard.json and use with: actionsguard scan --config .actionsguard.json",

  "github_token": null,
  "output_dir": "./reports",
  "formats": [
    "json",
    "html",
    "markdown"
  ],
  "checks": [
    "Dangerous-Workflow",
    "Token-Permissions",
    "Pinned-Dependencies",
    "Branch-Protection",
    "Code-Review",
    "Binary-Artifacts",
    "SAST",
    "Vulnerabilities"
  ],
  "fail_on_critical": false,
  "verbose": false,
  "json_logs": false,
  "use_cache": true,
  "cache_ttl": 24,
  "parallel_scans": 5,
  "scorecard_timeout": 300
}
